                        android:layout_margin="20dp"
                        android:text="Conditions générales d'utilisation"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

